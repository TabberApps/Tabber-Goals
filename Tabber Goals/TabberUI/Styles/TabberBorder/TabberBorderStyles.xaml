<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Border.Static.Background" Color="White"/>
    <SolidColorBrush x:Key="Border.Static.Border" Color="#e1e1e1"/>

    <Style x:Key="TabberBorderDefaultStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Border.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Border.Static.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="7"/>

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1.5"
                              Color="#dddddd"
                              Opacity="0.2"
                              BlurRadius="2"
                              Direction="275"/>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>